<h1>Game#new</h1>
<%= form_for @game, url: {action: "create"} do|f| %>
  <% (0..3).each do |i| %>
    <tr>
      <td><%= "#{i}."%></td>
      <td>邊個玩:</td>
      <td><%= select("user", i, User.all.collect {|u| [ u.name, u.id ] }, {selected: i + 1, include_blank: true})%></td>
      <td>邊個角色:</td>
      <td><%= select("role", i, Role.all.collect {|u| [ u.name, u.id ] }, {selected: i}) %></td>
      <td>分數:</td>
      <td><%= number_field("score", i, {value: 50}) %></td>
      <td>是否最後去旅行:</td>
      <td><%= check_box("is_last_traveller",  i) %></td>
    </tr>
    <br/>
  <% end %>
  <%= f.submit %>
<% end %>
